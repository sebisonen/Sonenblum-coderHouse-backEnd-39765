<div id={{cart._id}} >
    <div>
        <h1 style = "margin-left: 10%">Cart </h1>
        
        <a href="/products">Go back</a>

        {{#unless products}}
            <h2>CARRITO VAC√çO</h2>
        {{/unless}}
    </div>
    


    {{#if products}}
    <div id="cart-container">
        {{#each products}}
            <div id="card-{{this.product._id}}" class="product-card">
                <div >{{this.product.title}}</div>
                <div>Quantity: {{this.quantity}}</div>
                <div>${{this.product.price}} each</div>
                <img 
                    id= "delete-{{../cart._id}}-{{this.product._id}}"
                    class="delete-btn"
                    src="/img/crossIcon.svg"
                    alt="delete from cart button">
                
                    
                
            </div>
        {{/each}}

        <form action="" method="post">
            <button type= "submit" id="purchaseBtn-{{cart._id}}" class="purchase-btn">Buy</button>
        </form>
        <p id="message"></p>
    </div>
    {{/if}}

</div>

<script src="/js/cart.js"></script>